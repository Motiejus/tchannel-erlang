{erl_opts, [
    debug_info,
    report,
    verbose,
    warn_deprecated_function,
    warn_deprecated_type,
    warn_export_all,
    warn_export_vars,
    warn_obsolete_guard,
    warn_untyped_record,
    warn_unused_import,
    {parse_transform, lager_transform}
]}.

{deps, [
  {lager, "3.1.0", {git,"git://github.com/basho/lager.git", {tag, "3.1.0"}}}
]}.

{cover_enabled, true}.
